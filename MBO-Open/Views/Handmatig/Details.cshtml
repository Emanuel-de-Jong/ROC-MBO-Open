@model IEnumerable<MBO_Open.Models.Aanmeldingen>

@{
    ViewBag.Title = "Index";
}

<h2>Aanmeldingen</h2>

<p>
    @Html.ActionLink("Student aanmelden", "Create", new { id=ViewBag.toernooiID})
</p>
<table class="table">
    <tr>
        <th>
            Speler Naam
        </th>
        <th>
            School
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Speler.Voornaam) @Html.DisplayFor(modelItem => item.Speler.Tussenvoegsels) @Html.DisplayFor(modelItem => item.Speler.Achternaam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Speler.Scholen.Naam)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
