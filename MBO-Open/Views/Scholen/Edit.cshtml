@model MBO_Open.Models.Scholen

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bijwerken</h2>


@*A form for editing the selected school*@
@using (Html.BeginForm())
{
    @*Anti forgery security*@
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Scholen</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @*The ID is necesarry for the backend but set hidden so users can't see it*@
        @Html.HiddenFor(model => model.ID)

        @*The user can edit the name of the school here*@
        <div class="form-group">
            @Html.LabelFor(model => model.Naam, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Naam, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Naam, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@*A link to go back to the scholen list*@
<div>
    @Html.ActionLink("Terug", "Index")
</div>