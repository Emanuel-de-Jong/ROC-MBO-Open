@model IEnumerable<MBO_Open.Models.Wedstrijden>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/basisgegevens.css" rel="stylesheet" />

<h1>Uitslagen</h1>


@*Displays all uitslagen*@
<div class="container" style="padding-top: 100px;">
    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-bordered responsive nowrap project-table" width="100%">
                <thead>
                    @*The text of the columns*@
                    <tr>
                        <th>
                            Toernooi
                        </th>
                        <th>
                            Ronde
                        </th>
                        <th>
                            Speler 1
                        </th>
                        <th>
                            Speler 2
                        </th>
                        <th>
                            Winnaar
                        </th>
                        <th>
                            Score speler 1
                        </th>
                        <th>
                            Score speler 2
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        @*All necesarry information per item/uitslag*@
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Toernooien.Omschrijving)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ronde)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Speler.Voornaam) @Html.DisplayFor(modelItem => item.Speler.Tussenvoegsels) @Html.DisplayFor(modelItem => item.Speler.Achternaam)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Speler1.Voornaam) @Html.DisplayFor(modelItem => item.Speler1.Tussenvoegsels) @Html.DisplayFor(modelItem => item.Speler1.Achternaam)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Speler2.Voornaam) @Html.DisplayFor(modelItem => item.Speler2.Tussenvoegsels) @Html.DisplayFor(modelItem => item.Speler2.Achternaam)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Score1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Score2)
                            </td>
                            <td>
                                @*Every row gets an Edit button*@
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>